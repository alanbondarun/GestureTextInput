<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">

    <FrameLayout
        android:id="@+id/p_upper_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/p_input_text"
                android:textSize="16sp" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="180dip"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:orientation="horizontal">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_LU_L"
                        android:text="Q"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_LU_N"
                        android:text="W"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_LU_R"
                        android:text="E"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_U_L"
                        android:text="R"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_U_N"
                        android:text="T"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_U_R"
                        android:text="Y"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_RU_L"
                        android:text="U"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_RU_N"
                        android:text="I"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_RU_R"
                        android:text="O"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_L_LU"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_L_U"
                        android:text="A"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_L_RU"
                        android:text="S"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text=""
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview"
                        android:id="@+id/p_char_view_N_U"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="H"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview"
                        android:id="@+id/p_char_view_R_LU"/>

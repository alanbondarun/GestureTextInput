                        android:textSize="@dimen/palm_charview" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=""
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview"
                        android:id="@+id/p_char_view_L_L"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_L_N"
                        android:text="D"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=""
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview"
                        android:id="@+id/p_char_view_L_R"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text=""
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview"
                        android:id="@+id/p_char_view_N_N"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=""
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview"
                        android:id="@+id/p_char_view_R_L"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="K"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview"
                        android:id="@+id/p_char_view_R_N"/>

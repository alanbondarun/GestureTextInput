                        android:text="F"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview"
                        android:id="@+id/p_char_view_L_D"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="G"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview"
                        android:id="@+id/p_char_view_L_RD"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text=""
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview"
                        android:id="@+id/p_char_view_N_D"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="L"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview"
                        android:id="@+id/p_char_view_R_LD"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="P"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview"
                        android:id="@+id/p_char_view_R_D"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=""
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview"
                        android:id="@+id/p_char_view_R_RD"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_LD_L"
                        android:text="Z"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_LD_N"
                        android:text="X"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_LD_R"
                        android:text="C"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_D_L"
                        android:text="V"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_D_N"
                        android:text="B"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_D_R"
                        android:text="N"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_RD_L"
                        android:text="M"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_RD_N"
                        android:text="SPC"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/p_char_view_RD_R"
                        android:text="DEL"
                        android:gravity="center"
                        android:textSize="@dimen/palm_charview" />
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </FrameLayout>

    <com.alanb.gesturetextinput.TouchFeedbackFrameLayout
        android:id="@+id/p_touch_point_area"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.gesture.GestureOverlayView
            android:id="@+id/p_gesture_view"
            android:background="@color/colorTouchBackground"
            android:gestureColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.gesture.GestureOverlayView>
    </com.alanb.gesturetextinput.TouchFeedbackFrameLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_watch_write"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alanb.gesturetextinput.OneDActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/o_input_text"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/o_char_view"
        android:layout_below="@+id/o_input_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4mm"
        android:orientation="horizontal"
        android:layout_width="64mm"
        android:layout_height="8mm">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25">
            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/o_char_indi_1"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="24sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25">
            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/o_char_indi_2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="24sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25">
            <TextView
                android:text="Del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/o_char_indi_3"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="24sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25">
            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/o_char_indi_4"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="24sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/o_char_touch"
        android:layout_below="@+id/o_char_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12mm"
        android:orientation="horizontal"
        android:layout_width="72mm"
        android:layout_height="10mm">

        <RelativeLayout
            android:id="@+id/o_touchArea1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@color/colorTouchBackground">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/o_touchArea2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@color/colorTouchPink">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/o_touchArea3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@color/colorTouchBackground">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/o_touchArea4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@color/colorTouchPink">
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
